/* pages/book/book.wxss */
/* 文字划线 */
.text-through{
  text-decoration: line-through;
}
.container .tab-box{
  border-top: 1rpx solid #eee;
  position: fixed;
  z-index: 999;

  width: 100%;
  top: -1rpx;
}

.container .list-box{
  margin-top: 120rpx;
}

.container .list{
  height: 1000rpx;
}
.container .list .list-item{}
.container .list .list-item > .cu-item .image{
  max-height: 384rpx; 
}

.container .list .cu-item .desc{
  padding-top: 4rpx;
}


.container .list .cu-list{
  margin: 20rpx 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.cu-list.menu-avatar>.cu-item {
  display: block;
}

.container .list .item-bottom{
  padding-top: 10rpx;
}
.container .list .item-bottom view{
  display: inline-block;
}

.container .list .item-bottom button{
  width: 120rpx;
  /* height: 48rpx; */
  display: inline-block;

  min-height: 10rpx;
  line-height: 48rpx;

}

.container .list .item-bottom .left{
  width: 560rpx;
}
.container .list .item-bottom .left text + text{
  margin-left: 10rpx;
}
